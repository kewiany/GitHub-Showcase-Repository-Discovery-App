<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="TextRepositoryItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="IconRepositoryItem">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="IconRepositoryDetailsItem">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="TextIconRepositoryItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="TextIconRepositoryDetailsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RepositoryDetailsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RepositoryDetailsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>
</resources>